@model ShoppingCart

<header class="bg-dark py-0">
    <div class="container px-4 px-lg-5 my-1">
        <div class="text-center text-white pt-1 pb-3">
            <h1 class="display-4 fw-bolder">@Model.Product.Name</h1>
            <p class="lead fw-normal text-white-50 mb-0">@Model.Product.Category.Name</p>
        </div>
    </div>
</header>
<form method="post">
<section class="py-5">
    <div class="container px-4 px-lg-5 my-0">
        <div class="row gx-4 gx-lg-5 align-items-center">
                <input hidden asp-for="ProductId" />
            <div class="col-md-6"><img class="card-img-top mb-5 mb-md-0" src="~/@Model.Product.Img" alt="..." width="400" height="450"></div>
            <div class="col-md-6">
                <div class="small mb-1">@Model.Product.Category.Name</div>
                <h1 class="display-5 fw-bolder">@Model.Product.Name</h1>
                <div class="fs-5 mb-5">
                    <span class="text-decoration-line-through">$@Model.Product.Price</span>
                    <span>$40.00</span>
                </div>
                <p class="lead">@Model.Product.Description</p>
                <div class="d-flex">
                    <input class="form-control text-center me-3" id="inputQuantity" asp-for="Count" style="max-width: 3rem">
                    <button class="btn btn-outline-dark flex-shrink-0" type="submit">
                        <i class="bi-cart-fill me-1"></i>
                        Add to cart
                    </button>
                </div>
            </div>
        </div>
    </div>
</section>
</form>